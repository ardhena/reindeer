%nav.navbar.navbar-default.navbar-static-top{ role: "navigation" }
	.container-fluid
		.navbar-header
			= link_to root_path do
				%img.navbar-brand{ src: 'https://dl.dropboxusercontent.com/u/52870658/reindeer_colour.png', class: 'logo' }
				.navbar-brand Reindeer
		#navbar.navbar-collapse.collapse
			%ul.nav.navbar-nav
				%li= link_to 'Home page', root_path
				%li= link_to 'News', news_index_path
				%li= link_to 'Articles', articles_path
				%li= link_to 'About project', about_path
			%ul.nav.navbar-nav.navbar-right
				- if user_signed_in?
					%li= link_to 'My profile', my_profile_path
					%li= link_to 'Log out', destroy_user_session_path, :method=>'delete'
				- elsif admin_signed_in?
					%li= link_to 'Admin panel', admin_panel_root_path
					%li= link_to 'Logout', destroy_admin_session_path, :method=>'delete'
				- else
					%li= link_to 'Log in', new_user_session_path
					%li= link_to 'Sign up', new_user_registration_path