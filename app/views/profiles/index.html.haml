.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h2 Search
      .panel-body
        = simple_form_for profile_search, url: profiles_path do |f|
          .form-inputs
            = f.input :country, collection: current_user.decorate.countries_collection_values
            = f.input :school, collection: current_user.decorate.schools_collection_values
            = f.input :city
            = f.input :sex, collection: current_user.decorate.sexes_collection_values
            = f.input :first_name
            = f.input :last_name
          .form-actions
            = f.button :submit, "Search", class: 'btn btn-default'

.page-header.profiles
  %h2 View profiles
.row
  - users.each do |user|
    .col-md-4.to_profile
      = link_to profile_path(user) do
        .tile
          %span= image_tag user.gravatar_url(size: 50)
          %span= user.name