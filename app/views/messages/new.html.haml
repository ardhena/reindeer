.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h2 New message
      .panel-body
        = simple_form_for message, url: messages_path, method: 'POST' do |f|
          .form-inputs
            = f.input :received_messageable_id, as: :select, collection: current_user.accepted_friends.map{ |f| ["#{f.first_name} #{f.last_name}", f.id] }, label: 'Send to'
            = f.input :body, label: 'Message content'
          .form-actions
            = f.button :submit, "Send message", class: "btn btn-header"